@using Internet_1.ViewModels;

@{
    Layout = "_LayoutAdmin";
}

@model List<StudentModel>

@section CardHeader{
    <span>Ödev Durumu</span>
}

<a asp-action="Add" asp-controller="Student" class="btn btn-primary btn-sm mb-2">Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Öğrenci Adı</th>
            <th>Öğrenci No</th>
            <th>Ödev Teslim Tarihi </th>
            <th>Ödev Durumu</th>
            <th>Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.StudentNumber</td>
                <td>@item.DateTime</td>

                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success text-white">Teslim Tarihine Zaman Var</span>
                    }
                    else
                    {
                        <span class="badge bg-danger text-white">Teslim Tarihi Sona Erdi </span>
                    }
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>

