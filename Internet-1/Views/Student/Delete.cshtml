@using Internet_1.ViewModels;

@{
    Layout = "_LayoutAdmin";
}
@model StudentModel
@section CardHeader {
    <span>Öğrenci Ödevi Sil</span>
}
<h4>@Model.Name adlı öğrencinin ödevi silinecektir, Onaylıyor musunuz?</h4>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Sil" class="btn btn-danger btn-sm" />
    <a asp-action="Index" class="btn btn-primary btn-sm">Vazgeç</a>
</form>

