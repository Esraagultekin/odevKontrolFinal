@using AspNetCoreHero.ToastNotification;
@using Internet_1.ViewModels;


@{
    Layout = "_LayoutAdmin";
}
@model StudentModel
@section CardHeader {
    <span>Öğrenci Ödev Durumu Düzenle</span>
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Student" asp-action="Update" method="post">

            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Id" class="form-control" type="hidden" />
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="mb-2">
                <label asp-for="StudentNumber"></label>
                <input asp-for="Id" class="form-control" type="hidden" />
                <input asp-for="StudentNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="StudentNumber"></span>
            </div>

            <div class="mb-2">
                <label asp-for="DateTime"></label>
                <input asp-for="Id" class="form-control" type="hidden" />
                <input asp-for="DateTime" class="form-control" />
                <span class="text-danger" asp-validation-for="DateTime"></span>
            </div>


            <div class="mb-2">

                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive"></label>
                <span class="text-danger" asp-validation-for="IsActive"></span>
            </div>
            <div class="mb-2">
                <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

