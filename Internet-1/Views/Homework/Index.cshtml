@using Internet_1.ViewModels

@{
    Layout = "_LayoutAdmin";
}
@model List<HomeworkModel>
<h2>Ödev Bildirimi</h2>
<hr />
<a asp-action="Add" asp-controller="Homework" class="btn btn-primary btn-sm mb-2">Ekle</a>

@if (Model.Count == 0)
{
    <div class="alert alert-danger col-md-4 mb-2">Ödev Eklenmedi!</div>
}
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Öğrenci Adı </td>
            <td>Öğrenci Numarası </td>
            <td>Ödev </td>
            <td>Ödev Durumu</td>
            <td>Düzenle</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var homework in Model)
        {
            <tr>
                <td>@homework.Id</td>
                <td>@homework.Name</td>
                <td>@homework.StudentNumber</td>
                <td>@homework.LessonName</td>

                <td>
                    @if (homework.IsActive)
                    {
                        <span class="badge bg-success">Ödev Verildi</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Ödev Verilmedi</span>
                    }


                </td>
                <td>
                    <a asp-action="Update" asp-controller="Homework" class="btn btn-primary btn-sm" asp-route-id="@homework.Id">Düzenle</a>
                    <a asp-action="Delete" asp-controller="Homework" class="btn btn-danger btn-sm" asp-route-id="@homework.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>



